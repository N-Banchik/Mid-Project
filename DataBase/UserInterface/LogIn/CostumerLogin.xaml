<Window x:Class="UserInterface.LogIn.CostumerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface.LogIn"
        mc:Ignorable="d"
        Title="Costumer Login" Height="450" Width="192" WindowStartupLocation="CenterScreen">
    <Grid x:Name="WinGrid">
        <TextBox x:Name="Email_Text" HorizontalAlignment="Center" Margin="0,64,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordText" PasswordChar="*"  HorizontalAlignment="Center" Margin="0,122,0,0" VerticalAlignment="Top" Width="120" ToolTip="Password  Must be between 8-12 characters"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="52,96,0,0" VerticalAlignment="Top"  />
        <Label Content="Email:" HorizontalAlignment="Left" Margin="63,38,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Login" Click="Login_Click" Content="Log-In" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Height="32" Width="140"/>
        <Button x:Name="Register" Click="Register_Click" Content="Register" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" Height="32" Width="140"/>

    </Grid>
</Window>
